                    </tr>
                </thead>
                {{#each pedidos}}
                <tr>
                    <td>
                        {{id}}
                    </td>
                    <td class="text-end">
                        {{nome}}
                    </td>
                      <td class="text-end">
                        {{cep}}
                    </td>
                      <td class="text-end">
                        {{lorgradouro}}
                    </td>
                      <td class="text-end">
                        {{numeroLogradouro}}
                    </td>
                      <td class="text-end">
                        {{complementoLogradouro}}
                    </td>
                      <td class="text-end">
                        {{cidade}}
                    </td>
                      <td class="text-end">
                        {{estado}}
                    </td>
                      <td class="text-end">
                        {{produtos}}
                    </td>
                      <td class="text-end">
                        {{complementoProdutos}}
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
</main>